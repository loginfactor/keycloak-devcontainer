{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Hello World Script",
            "type": "shell",
            "command": "./run.sh", // Change to "run.bat" for Windows
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build Keycloak",
            "type": "shell",
            "command": "./mvnw",
            "args": [
                "clean",
                "install",
                "-DskipTests",
                "-DskipTestsuite",
                "-DskipExamples"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}